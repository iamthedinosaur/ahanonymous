<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/posterInfo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#63b3ff"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="â™‚ 10"/>

    <TextView
        android:id="@+id/reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/posterInfo"
        android:text="Is this even debatable? The answer is certainly 'yes'! Stop asking such silly questions, you fool."
        android:textStyle="normal"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/replyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reply"
        android:layout_toRightOf="@id/posterInfo"
        android:text="5/22/18 2:42"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#3F51B5"/>

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/replyTime"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/posterInfo"
        android:background="#ededed"/>
</RelativeLayout>